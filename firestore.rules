rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Function to check if the current user is admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminType != null;
    }

    // Allow admins to read all users
    match /users/{userId} {
      allow read: if isAdmin();
    }

    // Admins can read all dashboard data
    match /donations/{donationId} {
      allow read: if isAdmin();
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminLevel >= 2;
    }
    match /donors/{donorId} {
      allow read: if isAdmin();
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminLevel >= 2;
    }
    match /campaigns/{campaignId} {
      allow read: if isAdmin();
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminLevel >= 2;
    }
    match /activities/{activityId} {
      allow read: if isAdmin();
    }

    // Organization info - allow admins to read/write
    match /organization/{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Deny all other writes by default
    match /{document=**} {
      allow write: if false;
    }
  }
}
